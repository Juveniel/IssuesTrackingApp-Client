<div class="container-fluid">
    <h2>Projects List</h2>

    <div class="list">
        <table class="table">
            <tbody>
                {{#each projects}}
                    <tr>
                        <td class="name">
                            <strong>{{organization.name}}</strong>
                            <a href="#/dashboard/projects/{{_id}}/issues/list">{{name}}</a>
                        </td>
                        <td class="icon">
                            <a href="#/dashboard/projects/{{_id}}/issues/new" data-toggle="tooltip" title="New issue">
                                <i class="ion-plus"></i>
                            </a>
                        </td>
                        <td class="icon">
                            <a href="#/dashboard/projects/{{_id}}/milestones/new" data-toggle="tooltip" title="Milestones">
                                <i class="ion-calendar"></i>
                            </a>
                        </td>
                        {{#ifCond ../user.role "admin"}}
                            <td class="icon">
                                <a href="#/dashboard/projects/{{_id}}/settings" data-toggle="tooltip" title="Settings">
                                    <i class="ion-ios-cog-outline"></i>
                                </a>
                            </td>
                        {{/ifCond}}
                        <td class="count">
                            <a href="#/dashboard/projects/issues/open">
                                {{#countStatusInArray issues "Open" }}{{/countStatusInArray}}
                            </a>
                        </td>
                        <td class="count">
                            <a href="#/dashboard/projects/issues/resolved">
                                {{#countStatusInArray issues "Resolved" }}{{/countStatusInArray}}
                            </a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{#ifCond user.role "admin"}}
        <a href="#/dashboard/projects/new">
            <i class="ion-plus"></i>
            Add new project
        </a>
    {{/ifCond}}
</div>