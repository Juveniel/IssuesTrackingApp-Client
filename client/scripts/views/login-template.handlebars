<div class="m-login">
    <div class="wrapper">
        <h2 class="title">Login to your account</h2>

        <form id="login-form" class="form" method="post" action="#/login">
            <div id="login-form-errors" class="auth-error-block alert alert-danger"></div>

            <div class="form-group has-feedback">
                <input type="text" class="form-control" name="username" id="username" placeholder="Email" required>
            </div>

            <div class="form-group has-feedback">
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
            </div>
            <div class="controls">
                <input type="submit" class="btn-gradient btn-gradient-lg gradient-green-blue" value="LOGIN">
            </div>

            <div class="options">
                <a class="pull-left beige" href="#/forgotten-password">Forgot password?</a>
                <a class="pull-right electric-green" href="#/register">Register New Account?</a>
            </div>
        </form>
    </div>
</div>
